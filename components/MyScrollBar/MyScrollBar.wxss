.scroll-bar{
  padding: 5% 0;
  background-color: #f1f1f1;
  width: 100%;
  white-space: nowrap;
  overflow-x: scroll;
  box-sizing: border-box;
}
.scroll-bar-item{
  display: inline-block;
  width: 60%;
  margin: 0 2vw;
  height:200rpx;
  border-radius: 20rpx;
  background-color: red;
  box-shadow: 0 0 10rpx #ccc;
}
.scroll-bar-wrap .img{
  width: 100%;
  height: 100%;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
