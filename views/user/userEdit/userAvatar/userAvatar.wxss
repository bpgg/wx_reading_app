/* views/user/userEdit/userAvatar/userAvatar.wxss */
page{
  background-color: #000000;
}
.avatar-wrap{
  width: 100vw;
  height: 100vh;
  position: fixed;
}
.avatar-box{
  width: 70vw;
  height: 70vw;
  position: absolute;
  top: 50%;
  left: 50%;
  border: 2rpx solid #fff;
  transform: translate(-50%,-50%);
}
.FilePath{
  position: absolute;
  width: 400rpx;
  height: 400rpx;
  top: 50%;
  left: 50%;
  border: 2rpx solid #fff;
  transform: translate(-50%,-50%);
  overflow: visible;
}
.btn-wrap{
  z-index: 2;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  padding: 0 20rpx;
  justify-content: space-between;
  align-items: center;
  color: white;
}